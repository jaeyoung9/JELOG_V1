<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <definition name="layout" template="/WEB-INF/layout/layout.jsp">
        <put-attribute name="header" value="/WEB-INF/layout/header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/layout/footer.jsp" />
    </definition>
    <!--  각 페이지 마다 타일즈 설정 필요  -->

    <!--  Main Page  -->
    <definition name="main" extends="layout">
        <put-attribute name="body" value="/WEB-INF/views/main.jsp" />
    </definition>

    <!--  Main Detail  -->
    <definition name="main/relay" extends="layout">
        <put-attribute name="body" value="/WEB-INF/views/detail/mainDetails.jsp" />
    </definition>

    <!--  Login  -->
    <definition name="inSign" extends="layout">
        <put-attribute name="body" value="/WEB-INF/views/sign/in.jsp" />
    </definition>

</tiles-definitions>